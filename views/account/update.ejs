<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head', {title}) %>
    <style>
        .update-forms {
            display: grid;
            gap: 2rem;
            margin-top: 2rem;
        }
        
        .form-section {
            background: #f8f9fa;
            padding: 1.5rem;
            border-radius: 8px;
            border: 1px solid #dee2e6;
        }
        
        .form-section h2 {
            margin-top: 0;
            color: #343a40;
            border-bottom: 2px solid #007bff;
            padding-bottom: 0.5rem;
        }
        
        .form-group {
            margin-bottom: 1rem;
        }
        
        label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 600;
        }
        
        input[type="text"],
        input[type="email"],
        input[type="password"] {
            width: 100%;
            padding: 0.5rem;
            border: 1px solid #ced4da;
            border-radius: 4px;
            font-size: 1rem;
        }
        
        .btn {
            background: #007bff;
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 4px;
            cursor: pointer;
            font-size: 1rem;
            text-decoration: none;
            display: inline-block;
        }
        
        .btn:hover {
            background: #0056b3;
        }
        
        .password-info {
            background: #e9f7fe;
            border-left: 4px solid #17a2b8;
            padding: 1rem;
            margin: 1rem 0;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <%- include('../partials/header', {nav}) %>
    
    <main class="account-update">
        <h1>Update Account Information</h1>
        
        <% if (messages && messages.length > 0) { %>
            <div class="flash-messages">
                <% messages.forEach(msg => { %>
                    <div class="flash-message"><%= msg %></div>
                <% }) %>
            </div>
        <% } %>
        
        <% if (errors && errors.length > 0) { %>
            <div class="error-messages">
                <% errors.forEach(error => { %>
                    <div class="error-message"><%= error %></div>
                <% }) %>
            </div>
        <% } %>
        
        <div class="update-forms">
            <!-- Account Update Form -->
            <div class="form-section">
                <h2>Account Update</h2>
                <form method="post" action="/account/update">
                    <input type="hidden" name="account_id" value="<%= accountData.account_id %>">
                    
                    <div class="form-group">
                        <label for="account_firstname">First Name:</label>
                        <input type="text" id="account_firstname" name="account_firstname" 
                               value="<%= accountData.account_firstname %>" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="account_lastname">Last Name:</label>
                        <input type="text" id="account_lastname" name="account_lastname" 
                               value="<%= accountData.account_lastname %>" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="account_email">Email Address:</label>
                        <input type="email" id="account_email" name="account_email" 
                               value="<%= accountData.account_email %>" required>
                    </div>
                    
                    <button type="submit" class="btn">Update Account</button>
                </form>
            </div>
            
            <!-- Password Change Form -->
            <div class="form-section">
                <h2>Change Password</h2>
                
                <div class="password-info">
                    <p><strong>Password Requirements:</strong></p>
                    <ul>
                        <li>At least 12 characters long</li>
                        <li>Contains at least 1 uppercase letter</li>
                        <li>Contains at least 1 lowercase letter</li>
                        <li>Contains at least 1 number</li>
                        <li>Contains at least 1 special character</li>
                    </ul>
                </div>
                
                <form method="post" action="/account/update-password">
                    <input type="hidden" name="account_id" value="<%= accountData.account_id %>">
                    
                    <div class="form-group">
                        <label for="account_password">New Password:</label>
                        <input type="password" id="account_password" name="account_password" 
                               required minlength="12">
                    </div>
                    
                    <button type="submit" class="btn">Change Password</button>
                </form>
            </div>
        </div>
        
        <div style="margin-top: 2rem;">
            <a href="/account" class="btn">Back to Account Management</a>
        </div>
    </main>
    
    <%- include('../partials/footer') %>
</body>
</html>