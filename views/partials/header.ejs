<!-- views/partials/header.ejs -->
<header>
    <div class="logo">
        <a href="/">
            <img src="/public/images/site/icon.png" alt="CSE Motors Logo">
        </a>
    </div>
    
    <nav>
        <ul class="nav-list">
            <!-- Home link -->
            <li class="nav-item">
                <a href="/" class="nav-link" title="Home page">Home</a>
            </li>
            
            <!-- Inventory classification links would go here -->
            <!-- Example: <li><a href="/inv/type/1">Classic Cars</a></li> -->
            
            <!-- Account links with authentication check -->
            <% if (typeof loggedin !== 'undefined' && loggedin && accountData) { %>
                <!-- Logged in: Show Welcome and Logout -->
                <li class="nav-item">
                    <a href="/account" class="nav-link account-link" title="Manage your account">
                        Welcome <%= accountData.account_firstname %>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/account/logout" class="nav-link logout-link" title="Logout">
                        Logout
                    </a>
                </li>
            <% } else { %>
                <!-- Not logged in: Show My Account -->
                <li class="nav-item">
                    <a href="/account/login" class="nav-link account-link" title="Login or register">
                        My Account
                    </a>
                </li>
            <% } %>
        </ul>
    </nav>
</header>