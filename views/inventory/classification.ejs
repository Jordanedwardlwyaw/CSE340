<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head', {title}) %>
    <link rel="stylesheet" href="/css/classification.css">
</head>
<body>
    <%- include('../partials/header') %>
    
    <main class="container">
        <div class="classification-container">
            <h1 class="classification-title"><%= title %></h1>
            
            <% if (grid && grid.length > 0) { %>
                <div class="vehicles-grid">
                    <% grid.forEach(function(vehicle) { %>
                        <div class="vehicle-card">
                            <div class="vehicle-image">
                                <img src="<%= vehicle.inv_image || '/images/placeholder.jpg' %>" 
                                     alt="<%= vehicle.inv_make %> <%= vehicle.inv_model %>">
                            </div>
                            <div class="vehicle-info">
                                <h2 class="vehicle-name">
                                    <%= vehicle.inv_year %> <%= vehicle.inv_make %> <%= vehicle.inv_model %>
                                </h2>
                                <div class="vehicle-price">
                                    $<%= new Intl.NumberFormat('en-US').format(vehicle.inv_price) %>
                                </div>
                                <p class="vehicle-description">
                                    <%= vehicle.inv_description || 'No description available.' %>
                                </p>
                                <a href="/inv/detail/<%= vehicle.inv_id %>" class="details-link">
                                    View Details
                                </a>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="no-vehicles">
                    <h3>No vehicles found in this classification</h3>
                    <p>Please check back later or browse our other vehicle categories.</p>
                    <a href="/" class="details-link">Return to Home</a>
                </div>
            <% } %>
            
            <div class="back-link" style="text-align: center; margin-top: 40px;">
                <a href="/" class="details-link" style="background: #7f8c8d;">
                    <i class="fas fa-arrow-left"></i> Back to Home
                </a>
            </div>
        </div>
    </main>
    
    <%- include('../partials/footer') %>
</body>
</html>